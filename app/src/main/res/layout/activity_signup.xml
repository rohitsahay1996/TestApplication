<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hospo"
    android:scrollbarSize="16dp"
    tools:context="com.example.rohit.testapp.SignupActivity">

    <EditText
        android:id="@+id/signup_display_name"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="100dp"
        android:background="@android:drawable/screen_background_dark_transparent"
        android:drawableLeft="@drawable/ic_perm_identity_black_24dp"
        android:drawablePadding="16dp"
        android:drawableTint="#ffff"
        android:ems="10"
        android:hint="Display Name"
        android:inputType="textPersonName"
        android:padding="20dp"

        android:textColor="#ffff"
        android:textColorHint="#ffff" />

    <EditText
        android:id="@+id/signup_email"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/signup_display_name"
        android:layout_alignStart="@+id/signup_display_name"
        android:layout_below="@+id/signup_display_name"
        android:layout_marginTop="10dp"
        android:background="@android:drawable/screen_background_dark_transparent"

        android:drawableLeft="@drawable/ic_email_black_24dp"
        android:drawablePadding="16dp"
        android:drawableTint="#ffff"
        android:ems="10"

        android:hint="Email"
        android:inputType="textEmailAddress"

        android:padding="20dp"
        android:textColor="#ffff"
        android:textColorHint="#ffff" />

    <EditText
        android:id="@+id/signup_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/signup_email"
        android:layout_alignStart="@+id/signup_email"
        android:layout_below="@+id/signup_email"
        android:layout_marginTop="10dp"
        android:background="@android:drawable/screen_background_dark_transparent"
        android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
        android:drawablePadding="16dp"
        android:drawableTint="#ffff"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="20dp"
        android:textColor="#ffff"
        android:textColorHint="#ffff" />

    <Button
        android:id="@+id/signup_btn"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@android:drawable/screen_background_light_transparent"
        android:editable="true"
        android:padding="20dp"
        android:text="Sign up"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/signup_already"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:text="Login"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_above="@+id/signup_btn"
        android:layout_toEndOf="@+id/signip_tv"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/signip_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/signup_already"
        android:layout_centerHorizontal="true"
        android:text="Already have an account?"
        android:textColor="@android:color/white"
        android:textSize="15sp" />

</RelativeLayout>
